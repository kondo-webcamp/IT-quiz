⑥クイズ画面(@quizzes/index)

<% if @count == 10 %>
  <div>
    <strong>第<%= @count %>問</strong>
    <div><%= @quiz.question %></div>
  </div>

  <div class="hidden_box">
    <label for="label1">ア</label>
    <%= @quiz.choices_first %>
  </div>

  <div class="hidden_box">
    <label for="label1">イ</label>
    <%= @quiz.choices_second %>
  </div>

  <div class="hidden_box">
    <label for="label1">ウ</label>
    <%= @quiz.choices_third %>
  </div>

  <div class="hidden_box">
    <label for="label1">エ</label>
    <%= @quiz.choices_fourth %>

    <input type="checkbox" id="label1" class="switch" />
      <div class="hidden_show">
        <h4>正解：<%= @quiz.answer %></h4>
        <div>解説：<%= @quiz.explanation %></div>
      </div>
  </div>

  <%= link_to "結果を見る", new_user_quiz_path %>

<% else %>

  <div>
    <strong>第<%= @count %>問</strong>
    <div><%= @quiz.question %></div>
  </div>

  <div class="hidden_box">
    <label for="label1">ア</label>
    <%= @quiz.choices_first %>
  </div>

  <div class="hidden_box">
    <label for="label1">イ</label>
    <%= @quiz.choices_second %>
  </div>

  <div class="hidden_box">
    <label for="label1">ウ</label>
    <%= @quiz.choices_third %>
  </div>

  <div class="hidden_box">
    <label for="label1">エ</label>
    <%= @quiz.choices_fourth %>

    <input type="checkbox" id="label1" class="switch" />
      <div class="hidden_show">
        <h4>正解：<%= @quiz.answer %></h4>
        <div>解説：<%= @quiz.explanation %></div>
      </div>
  </div>

<%= link_to "次の問題へ", user_quizzes_path(count: @count,quiz: @quiz.id,  used_quizes: @used_quizes) %>

<% end %>