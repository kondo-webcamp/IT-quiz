<% if @count == 10 %>
  <div>
    <h2 class="faq">第 <%= @count %> 問</h2>
    <h3 class="question"><%= @quiz.question %></h3>
  </div>

  <div class="hidden_box">
    <%= link_to 'ア', score_update_path(@quiz, answer: "ア"), method: :patch, remote: true %>
    <%= @quiz.choices_first %>
  </div>

  <div class="hidden_box">
    <%= link_to 'イ', score_update_path(@quiz, answer: "イ"), method: :patch, remote: true %>
    <%= @quiz.choices_second %>
  </div>

  <div class="hidden_box">
    <%= link_to 'ウ', score_update_path(@quiz, answer: "ウ"), method: :patch, remote: true %>
    <%= @quiz.choices_third %>
  </div>

  <div class="hidden_box">
    <%= link_to 'エ', score_update_path(@quiz, answer: "エ"), method: :patch, remote: true %>
    <%= @quiz.choices_fourth %>
  </div>

    <div class="answer-explanation-hidden">答え & 解説</div>
      <div class="answer-explanation-show">
        <h4>正解：<%= @quiz.answer %></h4>
        <div>解説：<%= @quiz.explanation %></div>
        <%= link_to "結果を見る", new_user_quiz_path, onclick: 'total_score()' %>
      </div>


<% else %>

  <div>
    <h2 class="faq">第 <%= @count %> 問</h2>
    <h3 class="question"><%= @quiz.question %></h3>
  </div>

  <div class="answer_box">
    <%= link_to 'ア', score_update_path(@quiz, answer: "ア"), method: :patch, remote: true, class: 'select-button' %>
    <%= @quiz.choices_first %>
  </div>

  <div class="answer_box">
    <%= link_to 'イ', score_update_path(@quiz, answer: "イ"), method: :patch, remote: true, class: 'select-button' %>
    <%= @quiz.choices_second %>
  </div>

  <div class="answer_box">
    <%= link_to 'ウ', score_update_path(@quiz, answer: "ウ"), method: :patch, remote: true, class: 'select-button' %>
    <%= @quiz.choices_third %>
  </div>

  <div class="answer_box">
    <%= link_to 'エ', score_update_path(@quiz, answer: "エ"), method: :patch, remote: true, class: 'select-button' %>
    <%= @quiz.choices_fourth %>
  </div>

    <div class="answer-explanation-hidden">答え & 解説</div>
      <div class="answer-explanation-show">
        <h4>正解：<%= @quiz.answer %></h4>
        <div>解説：<%= @quiz.explanation %></div>
        <%= link_to "次の問題へ", user_quizzes_path(count: @count, quiz: @quiz.id, used_quizzes: @used_quizzes) %>
      </div>

<% end %>