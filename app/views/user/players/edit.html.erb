⑩マイページ＆編集(players/edit)

<%= form_with model: @player,url: user_player_path(@player.id), method: :patch, local: true do |f| %>
  <% if @player.image_icon.attached? %>
    <%= image_tag @player.image_icon, size: "100x100" %>
  <% else %>
    <%= image_tag '勉強アイコン2', size: "100x100" %>
  <% end %>
　<div>
　  <%= f.file_field :image_icon, placeholder: "プロフィール画像", accept: "image/*" %>
　</div>

  <div>
    <%= f.label :'ユーザーネーム' %>
    <%= f.text_field :player_name %>
  </div>

  <div>
    <%= f.label :'メールアドレス' %>
    <%= f.email_field :email, placeholder: "sample@sample.com", autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.text_field :introduction, placeholder: "〇〇勉強中！、趣味は〇〇など" %>
  </div>

  <%= f.submit '変更を保存' %>

<% end %>